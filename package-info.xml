<?xml version="1.0"?>
<!DOCTYPE package-info SYSTEM "http://www.simplemachines.org/xml/package-info">

<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">
	<id>RRasco:SMFGarage</id>
	<name>SMF Garage</name>
	<type>modification</type>
	<version>2.3</version>

    <!-- Installation, the key part of this file. -->
    <install for="2.0.9-2.0.99">
        <readme parsebbc="true">readme.txt</readme>
        <code type="file">install_db-smf2.php</code>
        <modification type="file">modification-smf2.xml</modification>
        <require-file name="smf2/Garage.php" destination="$sourcedir" />
        <require-file name="smf2/GarageFunctions.php" destination="$sourcedir" />
        <require-file name="smf2/GarageSettings.php" destination="$sourcedir" />
        <require-file name="smf2/GarageManagement.php" destination="$sourcedir" />
        <require-file name="smf2/Garage.template.php" destination="$themedir" />
        <require-file name="smf2/GarageSettings.template.php" destination="$themedir" />
        <require-file name="smf2/GarageManagement.template.php" destination="$themedir" />
        <require-file name="smf2/Garage.english.php" destination="$languagedir" />
        <require-file name="smf2/Garage.english-utf8.php" destination="$languagedir" />
        <require-file name="smf2/SSI_Garage.php" destination="$boarddir" />
        <require-file name="smf2/ssi_garage_examples.php" destination="$boarddir" />
        <require-dir name="smf2/css" destination="$themedir" />
        <require-dir name="smf2/images" destination="$themedir" />
		<require-dir name="smf2/scripts" destination="$themedir" />
        <require-dir name="smf2/Garage" destination="$boarddir" />
    </install>

    <!-- Don't forget something to make it uninstallable! -->
	<uninstall for="2.0.9-2.0.99">
		<modification type="file" reverse="true">modification-smf2.xml</modification>
	</uninstall>

</package-info>

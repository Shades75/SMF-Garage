        <require-file name="smf1/ssi_garage_examples.php" destination="$boarddir" />
        <require-dir name="smf1/images" destination="$themedir" />
        <require-dir name="smf1/Garage" destination="$boarddir" />
    </install>

    <!-- Don't forget something to make it uninstallable! -->
    <uninstall for="1.1 RC3,1.1, 1.1.0-1.1.99">
